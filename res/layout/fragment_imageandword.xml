<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CD7552"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#F8EFCB" >

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="38dip"
            android:text="Date"
            android:textColor="#6D6E70"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/japaneseTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dateTextView"
            android:layout_centerHorizontal="true"
            android:text="japanese word"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#6D6E70"
            android:textSize="40dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/weatherTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_toRightOf="@+id/lineImageView"
            android:textColor="#6D6E70"
            android:textSize="24sp"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:id="@+id/lineImageView"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/line" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/japaneseTextView"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@+id/lineImageView"
            android:src="@drawable/_cloudy_android" />

        <ProgressBar
            android:id="@+id/weatherProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/japaneseTextView"
            android:layout_alignTop="@+id/japaneseTextView" />

        <TextView
            android:id="@+id/romajiOrHiriganaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignLeft="@+id/japaneseTextView"
            android:layout_alignRight="@+id/japaneseTextView"
            android:text="" 
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#6D6E70"
            android:textSize="40dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/englishTextView"
        android:src="@drawable/cellphone" />

    <TextView
        android:id="@+id/englishTextView"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="English Text"
        android:textColor="#F8EFCB"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/blankTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#6D6E70"
        android:textSize="40dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/relativeLayout2"
        android:layout_alignParentRight="true"
        android:background="@drawable/soundicon"
        android:onClick="speakOut" />

</RelativeLayout>